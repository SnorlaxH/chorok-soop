{
    "manifest_version": 3,
    "name": "쵸록 숲",
    "description": "SOOP 편의기능 서비스",
    "version": "1.0.3",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.afreecatv.com/*",
        "*://*.sooplive.co.kr/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.sooplive.co.kr/*"
            ],
            "js": [
                "src/content.tsx"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "*://*.sooplive.co.kr/*"
            ]
        }
    ],
    "action": {
        "default_icon": "icon128.png",
        "default_popup": "index.html",
        "default_title": "Open Extension App"
    }
}